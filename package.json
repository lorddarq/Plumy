{
  "name": "@figma/my-make-file",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron/main.cjs",
  "description": "A modern task management and planning tool",
  "author": "lorddarq",
  "scripts": {
    "dev:vite": "vite --port 5173",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:pages": "vite --config pages/vite.config.ts",
    "build": "npm run build:renderer",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "build:pages": "vite build --config pages/vite.config.ts",
    "predist": "npm run generate:icons",
    "dist": "npm run predist && npm run build:renderer && npm run build:electron",
    "start": "electron .",
    "generate:icons": "node electron/scripts/generate-icons.cjs"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "1.1.6",
    "@radix-ui/react-label": "2.1.2",
    "@radix-ui/react-select": "2.1.6",
    "@radix-ui/react-slot": "1.1.2",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "date-fns": "3.6.0",
    "electron-store": "^8.1.0",
    "lucide-react": "0.487.0",
    "react-dnd": "16.0.1",
    "react-dnd-html5-backend": "16.0.1",
    "tailwind-merge": "3.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.12",
    "@types/react": "^19.2.10",
    "@vitejs/plugin-react": "4.7.0",
    "concurrently": "^8.2.0",
    "electron": "^26.2.0",
    "electron-builder": "^24.6.0",
    "icon-gen": "^5.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "4.1.12",
    "typescript": "^5.9.3",
    "vite": "6.3.5",
    "wait-on": "^7.0.1"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "18.3.1"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "build": {
    "icon": "electron/assets/icon",
    "appId": "com.plumy.app",
    "productName": "Plumy",
    "publish": null,
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "mac": {
      "icon": "electron/assets/app.icns",
      "target": [
        "dmg",
        "pkg"
      ]
    },
    "win": {
      "icon": "electron/assets/app.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "electron/assets/icon.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "pnpm": {
    "overrides": {
      "vite": "6.3.5"
    }
  }
}
